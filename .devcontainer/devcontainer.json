{
  "name": "py-ds-llm-env",
  "remoteUser": "vscode",       
  "overrideCommand": false,  
  "containerEnv": { "PATH": "/opt/venv/bin:${PATH}" },


  "build": { 
    "dockerfile": "Dockerfile",
    "context": "."
  },

  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {},
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/git-lfs:1": {}
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-toolsai.jupyter",
        "charliermarsh.ruff",
        "github.vscode-github-actions"
      ]
    }
  },
  "postCreateCommand": "make bootstrap"
}


// notes
// "remoteUser": "vscode" and "overrideCommand": false were used to prevent issues with pre-commit install
// "context": ".." allows for the Dockerfile to find the requirements.* files in the parent directory but note the relative path for Dockerfile that is now required
//
// additional references
// https://docs.github.com/en/codespaces/setting-up-your-project-for-codespaces/adding-a-dev-container-configuration/setting-up-your-python-project-for-codespaces
// https://containers.dev/guide/dockerfile 